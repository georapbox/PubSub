{
  "name": "PubSub",
  "version": "4.0.0",
  "description": "Javascript implementation of the Publish/Subscribe pattern.",
  "main": "dist/PubSub.cjs.min.js",
  "module": "dist/PubSub.esm.min.js",
  "unpkg": "dist/PubSub.umd.min.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "dev": "rollup -c -w",
    "lint": "eslint src/**/*.js",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "clean": "rimraf dist coverage",
    "prepare": "npm-run-all clean lint test build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/georapbox/PubSub.git"
  },
  "keywords": [
    "subscribe",
    "publish",
    "publish/subscribe",
    "pubsub",
    "pub/sub",
    "event",
    "emitter",
    "eventemitter"
  ],
  "author": "George Raptis <georapbox@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georapbox/PubSub/issues"
  },
  "homepage": "https://github.com/georapbox/PubSub#readme",
  "devDependencies": {
    "@babel/core": "~7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "~7.12.1",
    "@babel/preset-env": "~7.12.11",
    "@babel/register": "~7.12.10",
    "cross-env": "~7.0.3",
    "eslint": "~7.18.0",
    "jest": "~26.6.3",
    "npm-run-all": "~4.1.5",
    "rimraf": "~3.0.2",
    "rollup": "~2.38.0",
    "@rollup/plugin-babel": "~5.2.2",
    "rollup-plugin-terser": "~7.0.2"
  },
  "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead"
}
